<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new planet!</h3>
        <%= simple_form_for @land do |f| %>
          <%= f.input :area, placeholder: 'Mars' %>
          <%= f.input :local_attractions, placeholder: "Cave network..!?" %>
          <%= f.input :address, placeholder: "24c Interstellar way" %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
