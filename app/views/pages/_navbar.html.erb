<% if user_signed_in?%>
  <div class="navbar">
    <div class="container d-flex jutify-content-between">
      <div>
        <%= link_to root_path do %>
          <h1 style="color: black;">CosmosMarket</h1>
        <% end %>
      </div>

        <div>
          <div class="btn-group dropstart">
            <button type="button" class="dropdown" data-bs-toggle="dropdown" aria-expanded="false" style="border: 0;">
              <i class="fa-solid fa-user avatar-icon"></i>
            </button>
            <ul class="dropdown-menu">
              <a class="dropdown-item" href="/dashboard">Dashboard</a>
              <%= link_to 'Log out', destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to log out?'}, class: 'dropdown-item' %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% elsif %>
    <div class="navbar">
      <div class="container d-flex jutify-content-between">
        <div>
          <%= link_to root_path do %>
            <h1 style="color: black;">CosmosMarket</h1>
          <% end %>
        </div>
          <div class="d-flex">
          <%= link_to new_user_session_path do %>
            <p class='btn-brown'>Sign in</p>
          <% end %>
          <%= link_to new_user_registration_path do %>
            <p class='btn-brown'>Sign up</p>
          <% end %>
        </div>
      </div>
    </div>
</div>
<% end %>
